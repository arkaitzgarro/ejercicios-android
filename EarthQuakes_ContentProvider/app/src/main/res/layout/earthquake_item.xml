<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblMag"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold"
        android:gravity="center_vertical|right"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/abc_dropdownitem_text_padding_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPlace"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lblMag"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingTop="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_left"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTime"
        android:layout_below="@+id/lblPlace"
        android:layout_alignEnd="@+id/lblPlace"
        android:layout_toEndOf="@+id/lblMag"
        android:paddingTop="0dp"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingBottom="@dimen/abc_dropdownitem_text_padding_left"
        android:gravity="center_vertical" />

</RelativeLayout>